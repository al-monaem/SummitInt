@page
@model RegisterModel

@{
    Layout = "_LoginReg";
}

<div class="d-flex h-100 h-100">
    <div class="col-md d-flex align-items-center justify-content-center">
        <form class="p-4 rounded shadow-lg" style="width: 70%; background-color: #306ea1;" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-white text-center">Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" style="font-size: 12px"></div>
            <div class="d-flex gap-4 mb-3">
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="John Doe" />
                        <label asp-for="Input.Username">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger text-wrap" style="font-size: 12px"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger text-wrap" style="font-size: 12px"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="form-select" aria-required="true" placeholder="Select a role"></select>
                        <label asp-for="Input.Role">Role</label>
                        <span asp-validation-for="Input.Role" class="text-danger text-wrap style=" font-size: 12px""></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="john@doe.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger text-wrap" style="font-size: 12px"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger text-wrap" style="font-size: 12px"></span>
                    </div>
                    
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Register</button>
            <p class="text-white">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a></p>
        </form>
    </div>
    <div class="col-md"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
