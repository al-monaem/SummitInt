@using Models.ResponseEntity;
@model ItemDetails;

<div class="modal modal-lg fade" id="itemEditModal" tabindex="-1" aria-labelledby="itemEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" style="margin-top: 100px;">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="itemEditModalLabel">Create Item</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="itemEditForm" class="row" enctype="multipart/form-data" method="post">
                <div class="modal-body px-4 py-2">
                    <input id="category_id" name="CategoryId" hidden readonly asp-for="Item.CategoryId" />
                    <input id="id" name="Id" hidden readonly asp-for="Item.Id" />
                    <div class="row g-2">
                        <div class="col-md">
                            <div class="form-floating">
                                <input id="item_name" name="ItemName" class="form-control" asp-for="Item.ItemName" asp placeholder="Enter item name" />
                                <label asp-for="Item.ItemName"></label>
                                <span id="item_name_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-floating">
                                <input id="item_unit" name="ItemUnit" class="form-control" asp-for="Item.ItemUnit" asp placeholder="Enter item unit" />
                                <label asp-for="Item.ItemUnit"></label>
                                <span id="item_unit_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="number" name="ItemQuantity" id="item_quantity" class="form-control" asp-for="Item.ItemQuantity" asp placeholder="Enter item quantity" />
                                <label asp-for="Item.ItemQuantity"></label>
                                <span id="item_quantity_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-floating">
                                <select id="category" name="Category" class="form-control" asp-for="Item.Category" placeholder="Select category">
                                </select>
                                <label asp-for="Item.Category"></label>
                                <span id="category_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <div class="form-floating">
                                <textarea class="form-control" name="ItemDescription" style="padding-top: 10px;" asp-for="Item.ItemDescription"></textarea>
                                <label asp-for="Item.ItemDescription"></label>
                            </div>
                            <span id="item_images_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <div class="form-floating">
                                <div id="custom-file-upload" style="" class="custom-file-upload">
                                    <div class="form-control py-5 d-flex flex-column align-items-center justify-content-center">
                                        <div>Drag & Drop Images</div>
                                        <div>or</div>
                                        <button id="customFileUploadBtn" type="button" class="btn btn-info">Browse Files</button>
                                    </div>
                                    <input multiple accept=".png,.jpg,.jpeg" style="position: absolute; z-index: 10; height: 100%; visibility: hidden;" type="file" id="item_images" class="form-control" asp-for="Item.ItemImages" asp placeholder="Enter item images" />
                                </div>
                                @* <label asp-for="ItemImages" class="mb-2"></label> *@
                                <span id="item_quantity_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                            </div>
                            <span id="item_images_error" style="font-size: 10px; padding-left: 10px" class="text-danger"></span>
                        </div>
                    </div>
                    <div id="previewRow" class="d-flex px-2"></div>
                    <div class="d-flex justify-content-end">
                        <button onclick="clearInput(this)" style="margin-right: 8px;" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>